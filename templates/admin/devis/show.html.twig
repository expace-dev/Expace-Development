    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ devi.id }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ devi.statut }}</td>
            </tr>
            <tr>
