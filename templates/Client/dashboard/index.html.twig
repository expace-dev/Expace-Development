{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block body %}
    {{ component('breadcrumbs', {'title': block('title')}) }}
    <section id="dashboard" class="dashboard">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="icon-box">
                        <i class="bi bi-file-earmark-pdf-fill"></i>
                        <h3><a href="">{{devis}} Devis</a></h3>
                    </div>
                </div>
                <div class="col">
                    <div class="icon-box">
                        <i class="bi bi-file-earmark-pdf-fill"></i>
                        <h3><a href="">{{factures}} Factures</a></h3>
                    </div>
                </div>
                <div class="col">
                    <div class="icon-box">
                        <i class="bi bi-card-checklist"></i>
                        <h3><a href="">{{projets}} Projets</a></h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="section-title">
        <h2>Devis</h2>
    </div>
    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="info-box mb-4">
                        <div class="container mt-3" style="height: 500px">
                            {{ render_chart(chart_devis) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="section-title">
        <h2>Factures</h2>
    </div>
    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="info-box mb-4">
                        <div class="container mt-3" style="height: 500px">
                            {{ render_chart(chart_factures) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="section-title">
        <h2>Projets</h2>
    </div>
    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="info-box mb-4">
                        <div class="container mt-3" style="height: 500px">
                            {{ render_chart(chart_projets) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
