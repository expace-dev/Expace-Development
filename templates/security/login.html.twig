{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    {{ component('breadcrumbs', {'title': block('title')}) }}
    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="info-box mb-4 col-md-6">
                    <div class="container mt-3">
                        <form method="post">
                            {% for label, messages in app.flashes %}
                                <div class="alert alert-{{ label }}">
                                    {% for message in messages %}
                                        {{ message | raw }}    
                                    {% endfor %}
                                </div>
                            {% endfor %}
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="inputEmail">Email</label>
                                <input type="email" name="email" id="inputEmail" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="inputPassword">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" required>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}

                            <button class="btn btn-primary col-12 mb-4" type="submit">
                                Connexion
                            </button>

                            <div class="input-field mb-4 text-center">
                                    <a href="{{ path('app_register') }}">Je n'ai aucun compte</a> | <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
